@model YourSquare1.Models.Advertisment

@{
    ViewData["Title"] = "Edit";
}

<h2>Edycja ogłoszenia</h2>

<h4></h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label>Opis</label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Dod. wyposażenie</label>
                <input asp-for="AdditionalEquipmentDescription" class="form-control" />
                <span asp-validation-for="AdditionalEquipmentDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Cena</label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Adres</label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Zapisz" class="btn btn-primary" />
                <a asp-action="Index"><input type="submit" value="Powrót" class="btn btn-default" /></a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
