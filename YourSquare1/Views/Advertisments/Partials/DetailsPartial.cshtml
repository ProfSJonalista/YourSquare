<h2>Details</h2>

<div>
    <h4>Advertisment</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.AdvertismentCreator.Name)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.AdvertismentCreator.Name)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.AdvertismentCreator.Surname)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.AdvertismentCreator.Surname)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.AdvertismentCreator.PhoneNumber)
